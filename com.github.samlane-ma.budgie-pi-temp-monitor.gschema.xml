<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/com/github/samlane-ma/budgie-pi-temp-monitor/" 
              id="com.github.samlane-ma.budgie-pi-temp-monitor">
        <key name="interval" type="i">
            <summary>Interval</summary>
            <description>
                Choose the interval at which the CPU temperature is checked
            </description>
            <default>5</default>
        </key>
        <key name="celcius" type="b">
            <summary>Use Celcius</summary>
            <description>
                True will display temperature in Celcius.  False will set to Fahrenheit.
            </description>
            <default>true</default>
        </key>
    </schema> 
</schemalist>
